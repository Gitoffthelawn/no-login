{
  "manifest_version": 2,
  "name": "No Login",
  "version": "1.5",
  "description": "Access social media websites without logging in",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "*://*.linkedin.com/*",
    "*://*.facebook.com/*",
    "*://*.instagram.com/*"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "scripts": [
      "utils.js",
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/*",
        "*://*.facebook.com/*",
        "*://*.instagram.com/*"
      ],
      "js": [
        "utils.js",
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "113.0",
      "id": "{9ff7f7f9-a625-4cbe-ee6b-8f5c13c1cd7f}"
    },
    "gecko_android": {
      "strict_min_version": "113.0"
    }
  }
}
